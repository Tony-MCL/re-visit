{
  "expo": {
    "name": "Re:visit?",
    "slug": "re-visit",
    "version": "0.0.1",
    "experiments": {
      "baseUrl": "/re-visit"
    },
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0B0F14"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Re:visit? needs camera access to capture your moment.",
        "NSLocationWhenInUseUsageDescription": "Re:visit? stores GPS coordinates to remember where the moment happened."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0F14"
      }
    },
    "web": {
      "bundler": "metro"
    }
  }
}
